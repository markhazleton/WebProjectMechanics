<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Configure handlers for ASHX files only -->
    <httpHandlers>
      <add verb="*" path="*.ashx" type="System.Web.UI.SimpleHandlerFactory" />
    </httpHandlers>
    
    <!-- Enable detailed error messages for debugging -->
    <customErrors mode="Off" />
    <compilation debug="true" targetFramework="4.8" />
  </system.web>
  
  <system.webServer>
    <!-- Handlers for IIS 7+ -->
    <handlers>
      <add name="ASHX" verb="*" path="*.ashx" type="System.Web.UI.SimpleHandlerFactory" resourceType="Unspecified" preCondition="integratedMode" />
    </handlers>
    
    <!-- Enable CORS headers for all responses in this directory -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configure static content -->
    <staticContent>
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <!-- Ensure HTML files are served correctly -->
      <remove fileExtension=".html" />
      <mimeMap fileExtension=".html" mimeType="text/html" />
    </staticContent>
    
    <!-- Default document settings -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>